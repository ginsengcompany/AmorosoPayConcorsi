<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmoroso.Registrazione"
             xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
             Title="Registrati"
             BackgroundColor="#072034">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Start" Padding="0,20,0,0">
                <Label HorizontalOptions="CenterAndExpand" 
                       TextColor="White" 
                       FontSize="Large" 
                       FontAttributes="Bold" 
                       Text="REGISTRAZIONE"></Label>
            </StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="15">
         
            
                <xfx:XfxEntry 
                    Placeholder="Inserire E-mail"
                    PlaceholderColor="White"
                    x:Name="LabelEmail"
                    ErrorDisplay="Underline"
                    WidthRequest="200"
                    TextColor="White"
                    VerticalOptions="Center"/>

                   <xfx:XfxEntry 
                                 Placeholder="Inserire Nome"
                       PlaceholderColor="White"

                       x:Name="LabelNome"
                                 ErrorDisplay="Underline"
                       TextColor="White"
                       
                                 WidthRequest="200"
                                 VerticalOptions="Center"/>
                   <xfx:XfxEntry 
                                 Placeholder="Inserire Cognome"   
                       x:Name="LabelCognome"
                       PlaceholderColor="White"

                       TextColor="White"
                                 ErrorDisplay="Underline"
                                 WidthRequest="200"
                                 VerticalOptions="Center"/>
                   <xfx:XfxEntry 
                                 Placeholder="Inserire Password"   
                                 ErrorDisplay="Underline"
                       TextColor="White"
                       x:Name="LabelPassword"
                       PlaceholderColor="White"

                       IsPassword="True"
                                 WidthRequest="200"
                                 VerticalOptions="Center"/>
                    <xfx:XfxEntry 
                              Placeholder="Reinserire password"  
                              ErrorDisplay="Underline"
                        PlaceholderColor="White"

                        x:Name="LabelReinserimento"
                              WidthRequest="200"
                              IsPassword="True"
                              VerticalOptions="Center"/>
                <Button Text="Registrati"
                        HeightRequest="100"
                        WidthRequest="250"
                        Clicked="Registrati"
                        Style="{StaticResource buttonStyle}"
                />
            </StackLayout>
           
         
   

        </StackLayout>
    </ContentPage.Content>
</ContentPage>