<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmoroso.RisultatiQuiz" Title="Risultati" BackgroundColor="White" >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="RISULTATI" TextColor="#37637F" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" FontSize="Large"></Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="risposteEsatte.png" 
                       Grid.Row="0" 
                       Grid.Column="0" 
                       HeightRequest="70" 
                       WidthRequest="70"></Image>
                <Image 
                    Source="risposteSbagliate.png" 
                    Grid.Row="0"
                    Grid.Column="1" 
                    HeightRequest="70" 
                    WidthRequest="70"></Image>
                <Label 
                    x:Name="LabelEsatteSopra" 
                    Text="0" 
                    FontSize="Medium" 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    HorizontalOptions="CenterAndExpand"></Label>
                <Label 
                    x:Name="LabelSbagliateSopra" 
                    Text="0" 
                    FontSize="Medium" 
                    Grid.Row="1" 
                    Grid.Column="1" 
                    HorizontalOptions="CenterAndExpand"></Label>

            </Grid>
            <Grid Padding="2,2,2,2" ColumnSpacing="4" RowSpacing="5" BackgroundColor="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackLayout Grid.Column="0" Grid.Row="0" BackgroundColor="White">
                    <Label  FontSize="Large" VerticalTextAlignment="Center" Text="Numero domande" VerticalOptions="Center" ></Label>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="1" BackgroundColor="White">
                    <Label  FontSize="Large" VerticalOptions="Center" Text="Numero risposte esatte"></Label>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="2" BackgroundColor="White">
                    <Label  FontSize="Large" VerticalOptions="Center" Text="Numero risposte sbagliate"></Label>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="3" BackgroundColor="White">
                    <Label  FontSize="Large" VerticalOptions="Center" Text="Numero non risposte"></Label>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="4" BackgroundColor="White">
                    <Label  FontSize="Large" VerticalOptions="Center" Text="Tempo trascorso"></Label>
                </StackLayout>
                <StackLayout Grid.Column="0" Grid.Row="5" BackgroundColor="White">
                    <Label  FontSize="Large" VerticalOptions="Center" Text="Punteggio"></Label>
                </StackLayout>

                <StackLayout  Grid.Column="1" Grid.Row="0"  BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label x:Name="LabelNumeroDomande" FontSize="Large" Text="0" HorizontalTextAlignment="Center" VerticalOptions="Center"></Label>
                </StackLayout>
                <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="1"  BackgroundColor="White">
                    <Label x:Name="LabelEsatte" FontSize="Large" Text="0" HorizontalTextAlignment="Center"></Label>
                </StackLayout>
                <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="2"  BackgroundColor="White">
                    <Label x:Name="LabelSbagliate" FontSize="Large" Text="0" HorizontalTextAlignment="Center"></Label>
                </StackLayout>
                <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="3"  BackgroundColor="White">
                    <Label x:Name="LabelNonRisposte" FontSize="Large"  Text="0" HorizontalTextAlignment="Center"></Label>
                </StackLayout>
                <StackLayout  VerticalOptions="Center" Grid.Column="1" Grid.Row="4"  BackgroundColor="White" >
                    <Label x:Name="LabelTempo" FontSize="Medium" Text="0" HorizontalTextAlignment="Center"></Label>
                </StackLayout>
                <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="5"  BackgroundColor="White">
                    <Label x:Name="LabelPunteggio" FontSize="Large" Text="0" HorizontalTextAlignment="Center"></Label>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>