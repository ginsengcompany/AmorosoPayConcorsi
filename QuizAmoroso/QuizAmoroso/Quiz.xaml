<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmoroso.Quiz">

    <StackLayout>
        <StackLayout x:Name="Prova"/>
        <StackLayout VerticalOptions="Start">
            <Frame x:Name="frameDomanda"
                           IsVisible="False"
                           HasShadow="True">
                <Label x:Name="lblDomanda"
                               FontSize="Medium"
                               FontAttributes="Bold"/>
            </Frame>
            <Image x:Name="immagine"
                           IsVisible="False"/>

            <Grid x:Name="GrigliaDomande" RowSpacing="1" ColumnSpacing="1"/>


        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Clicked="Button_Clicked_1" HorizontalOptions="StartAndExpand" Text="indietro"></Button>
            <Button Clicked="Button_Clicked" HorizontalOptions="EndAndExpand" Text="avanti"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>